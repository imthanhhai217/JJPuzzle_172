<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fragment_show</item>
        <item name="android:windowExitAnimation">@anim/fragment_hide</item>
    </style>

    <style name="MyProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/mob_progress_bar_horizontal</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.Translucent.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--    <style name="DialogAnimationLeftIn">-->
    <!--        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>-->
    <!--        <item name="android:windowExitAnimation">@anim/slide_out_left</item>-->
    <!--    </style>-->

    <style name="shadow_text_timer">
        <item name="android:paddingLeft">0px</item>
        <item name="android:paddingBottom">0px</item>
        <item name="android:textColor">#02f600</item>
        <item name="android:textSize">10dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="DashBoardDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_down_bottom</item>
    </style>

    <style name="input_login_text">
        <item name="android:background">@drawable/slt_input_text_login</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="input_login_text_land">
        <item name="android:background">@drawable/slt_input_text_login_land</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/input_text_size_land</item>
    </style>

    <style name="header_text_land">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center|left</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/header_text_size_land</item>
    </style>

    <style name="err_text">
        <item name="android:textColor">@color/err_text</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/err_text_size</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:drawableLeft">@drawable/ic_err</item>
    </style>

    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>