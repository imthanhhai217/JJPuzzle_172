<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/btn_confirm_pressed" android:startColor="@color/btn_confirm_pressed" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
        </shape>
    </item>

</selector>